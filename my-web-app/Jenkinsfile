pipeline {
    agent any
    tools {
        maven 'Maven 3.9.7' 
    }
    environment {
        PATH = "/usr/local/sdkman/candidates/maven/current/bin:${env.PATH}" // Adjust if needed
    }
    stages {
        stage('Clean Workspace') {
            steps {
                sh 'mvn clean'
            }
        }
        stage('Checkout') {
            steps {
                git 'https://github.com/Blaundos/sample-project.git'
            }
        }
        stage('Compile') {
            steps {
                sh 'mvn compile'
            }
        }
        stage('Code Review') { 
            steps {
                sh 'mvn checkstyle:check' 
            }
        }
        stage('Unit Test') {
            steps {
                sh 'mvn test'
            }
        }
        stage('Package') {
            steps {
                sh 'mvn package'
            }
        }
        stage('Deploy to Local Tomcat') {
            steps {
                script {
                    def warFileName = sh(script: 'ls target/*.war', returnStdout: true).trim()
                    echo "WAR file name: ${warFileName}"
                    def tomcatWebapps = sh(script: 'echo $CATALINA_HOME/webapps/', returnStdout: true).trim() // Get webapps dir
                    sh "cp target/${warFileName} ${tomcatWebapps}"
                }
            }
        }
    }
}
